      cost: "Cost: ",
      effect: "Effect: ",
      addExtra: "Add extra",
      reduce: "Reduce",
      reduceCooldown: "Reduce",
      autoAdd: "Auto add",
      salt: "salt",
      water: "water",
      cooldown: "cooldown",
      currentLevel: "Current Level: ",
      experimentData: "Experiment Data",
      saltConcentration: "Salt Concentration: ",
